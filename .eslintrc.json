{
    "env": {
        "jest": true
    },
    "parser": "babel-eslint",
    "extends": ["airbnb"],
    "rules": {
        "indent": [2, 4],
        "complexity": [2, { "max": 6 }],
        "react/jsx-indent": [2, 4],
        "react/jsx-indent-props": [2, 4],
        "no-use-before-define": [2, {
            "functions": false,
            "classes": false,
            "variables": false
        }],
        "import/no-named-as-default": 0
    },
    "globals": {
        "document": true
    }
}